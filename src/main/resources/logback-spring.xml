<configuration>
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>
    <include resource="logback-appenders.xml"/>

    <!--  Bruk default Spring log config når man kjører lokalt  -->
    <springProfile name="local">
        <include resource="org/springframework/boot/logging/logback/base.xml"/>
    </springProfile>

    <!--  Bruk Logstash appender og secure log når man kjører i dev og prod  -->
    <springProfile name="prod,dev">
        <root level="INFO">
            <appender-ref ref="LOGSTASH_CONSOLE"/>
            <appender-ref ref="SECURE_FILE"/>
        </root>
    </springProfile>

    <logger name="org.apache.kafka.clients.NetworkClient" level="ERROR"/>
    <logger name="org.springframework.web" level="INFO"/>
</configuration>
